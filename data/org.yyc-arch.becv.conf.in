<!DOCTYPE busconfig PUBLIC "-//freedesktop//DTD D-BUS Bus Configuration 1.0//EN"
          "http://www.freedesktop.org/standards/dbus/1.0/busconfig.dtd">
<busconfig>
  <policy user="@BEC5_UWSGI_USER@">
    <allow own="org.yyc-arch.becv"/>
    <allow send_destination="org.yyc-arch.becv"/>
    <allow receive_sender="org.yyc-arch.becv"/>
  </policy>
  <policy user="root">
    <allow own="org.yyc-arch.becv"/>
    <allow send_destination="org.yyc-arch.becv"/>
    <allow receive_sender="org.yyc-arch.becv"/>
  </policy>
</busconfig>
